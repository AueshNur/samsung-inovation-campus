import math

# Функция для вычисления площади треугольника по формуле Герона
def heron_area(a, b, c):
    # Полупериметр
    p = (a + b + c) / 2
    # Площадь по формуле Герона
    area = math.sqrt(p * (p - a) * (p - b) * (p - c))
    return area

# Ввод сторон треугольника
try:
    a = int(input("Введите длину первой стороны треугольника: "))
    b = int(input("Введите длину второй стороны треугольника: "))
    c = int(input("Введите длину третьей стороны треугольника: "))

    # Проверка на возможность существования треугольника
    if a + b > c and a + c > b and b + c > a:
        area = heron_area(a, b, c)
        print(f"Площадь треугольника: {area:.2f}")
    else:
        print("Треугольник с такими сторонами не существует.")
except ValueError:
    print("Некорректный ввод. Пожалуйста, введите числовые значения для сторон.")
